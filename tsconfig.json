{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    /* ✅ FIX: Required for Expo + React Native */
    "module": "esnext",
    "moduleResolution": "bundler",
    /* ✅ Fix deprecated warnings */
    "ignoreDeprecations": "6.0",
    /* ✅ Keep path alias support */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    /* ✅ Allow JSON imports */
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}

